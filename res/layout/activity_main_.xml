<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <include
                    android:id="@+id/large_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/station_panel_large"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/home_panel_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:text="MON. 5 DEC 2012"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </FrameLayout>

            <include
                android:id="@+id/small_panel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="visible" />

            <include
                android:id="@+id/small_panel8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="gone" />

            <include
                android:id="@+id/small_panel9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="gone" />

            <include
                android:id="@+id/small_panel10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/station_panel_small"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>